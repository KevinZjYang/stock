# Stock Fund Monitoring System Environment Variables

# Flask Configuration
FLASK_ENV=production
FLASK_APP=app.py

# Application Configuration
APP_PORT=3333
HOST=0.0.0.0

# Database Configuration (SQLite is used, no additional config needed)

# Logging Configuration
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# API Configuration
STOCK_API_TIMEOUT=10
FUND_API_TIMEOUT=20

# Notification Configuration (if using webhook)
WECHAT_WEBHOOK_URL=

# Data Directory Paths (configured in docker-compose.yml)
DATA_DIR=./data
LOGS_DIR=./logs
TEMPLATES_DIR=./templates